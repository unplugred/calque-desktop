{
	"name": "Calque",
	"productName": "Calque",
	"author": "unplugred",
	"version": "1.5.0",
	"devDependencies": {
		"@electron/packager": "github:electron/packager",
		"electron": "37.7.0"
	},
	"dependencies": {
		"@electron/remote": "^2.1.2"
	},
	"main": "run.js",
	"scripts": {
		"start": "electron .",
		"build-linux": "electron-packager . Calque --overwrite --asar=true --platform=linux --arch=x64 --icon=icons/icon_512.png --prune=true --out=dist",
		"build-win": "electron-packager . Calque --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icons/icon.ico --prune=true --out=dist --win32metadata.CompanyName=unplugred",
		"build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icons/icon.icns --prune=true --out=dist --app-bundle-id=com.unplugred.calque --app-category-type=public.app-category.utilities"
	}
}
